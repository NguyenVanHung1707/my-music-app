<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Khi được nhấn -->
    <item android:state_pressed="true" android:drawable="@drawable/selected_bg" />

    <!-- Khi đang được chọn -->
    <item android:state_selected="true" android:drawable="@drawable/selected_bg" />

    <!-- Mặc định chưa chọn -->
    <item android:drawable="@drawable/unselected_bg" />
</selector>
